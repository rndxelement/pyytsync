{
  "manifest_version": 2,
  "name": "Pyytsync extension",
  "version": "1.0",
  "description": "Send YouTube links to a pyytsync instance.",
  "permissions": ["activeTab", "contextMenus",
    "menus", "https://www.youtube.com/*",
    "https://<pyytsync-instance>/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Pyytsync extension"
  }
}
